@model IEnumerable<aspNetCoreEscuela.Models.Alumno>

@{
    ViewData["Title"] = "Lista de alumnos";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Crear alumno</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Curso)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Curso.Nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AlumnoID">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.AlumnoID">Detalle</a> |
                <a asp-action="Delete" asp-route-id="@item.AlumnoID">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
