@model IEnumerable<aspNetCoreEscuela.Models.Evaluacion>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nota)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Alumno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Asignatura)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nota)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alumno.AlumnoID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Asignatura.AsignaturaID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EvaluacionID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EvaluacionID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EvaluacionID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
